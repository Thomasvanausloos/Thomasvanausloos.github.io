---
import PageTitle from "src/components/PageTitle.astro";
import PageMeta from "../components/PageMeta.astro";
import { SITE_TITLE } from "../config";
import PageLayout from "../layouts/PageLayout.astro";
import { Icon } from "astro-icon";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE} | Thomas Vanausloos`} slot="meta" />
  <Fragment slot="main">
    <section class="mb-8">
      <PageTitle
        title="Contact"
        subtitle="Je kan mij via de volgende kanalen contacteren."
      />
      <br/>
      <br/>
        <sl>
          <li class="flex flex-row">
            <Icon name="mdi:linkedin" /><span class="ml-2"
              ><a
                href="https://www.linkedin.com/in/thomasvanausloos/"
                target="_blank">linkedin.com/thomasvanausloos</a
              ></span
            >
          </li>
          <li class="flex flex-row">
            <Icon name="mdi:email" /><span class="ml-2"
              >thomasvanausloos@gmail.com</span>
          </li>
          <li class="flex flex-row">
            <Icon name="mdi:phone" /><span class="ml-2"
              >Kan bekomen worden na contact via mail of LinkedIn.</span
            >
          </li>
        </sl>
      </div>
    </section>
  </Fragment>
</PageLayout>
<style>
  [astro-icon] {
    width: 30px;
    height: 30px;
    margin-right: 0.5rem;
  }
</style>
