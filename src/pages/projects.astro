---
import { readAll } from "../lib/markdoc/read";
import { project } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import { SITE_TITLE } from "../config";
import Project from "../components/Project.astro";
import Card from "../components/Card.astro";

const projects = await readAll({
  directory: "projects",
  frontmatterSchema: project,
});

const sortedProjects = projects
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date_from).valueOf() -
      new Date(a.frontmatter.date_from).valueOf()
  );
---

<PageLayout>
  <PageMeta title={`Projects | ${SITE_TITLE}`} slot="meta" />
  <section slot="main">
    {
      sortedProjects.map((project) => {
        const formattedDateUntil = new Date(
          project.frontmatter.date_until
        ).toLocaleDateString("nl-BE", {
          year: "numeric",
          month: "short",
          day: "numeric",

        });
        return (
          <div class="project-card">
            <div class="timeline-marker-container">
              <div class="timeline-marker" />
              <time class="text-text-muted text-xs">{formattedDateUntil}</p>
                </div>
            <Card>
              <Project project={project} />
            </Card>
          </div>
        );
      })
    }
  </section>
</PageLayout>

<style>
  .title {
    font-weight: bold;
  }
  .project-card {
    padding: 16px 0 16px 32px;
    border-left: 2px solid lightgray;
  }
  .timeline-marker-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
    left: -41px;
    top: -12px;
  }
  time{
    margin-left: 32px
  }
  .timeline-marker {
    width: 16px;
    height: 16px;
    border-radius: 8px;
    background-color: rgb(var(--color-primary-yellow));
    /* position: relative;
    left: -41px;
    top: -12px; */
    margin: 0;
    border: 1px solid grey;
  }
</style>
